{
  "name": "network-project",
  "version": "1.0.0",
  "description": "Multi-Client Chat Application using Socket.IO in TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start:server": "node dist/server.js",
    "start:client": "node dist/client.js",
    "dev:server": "ts-node src/server.ts",
    "dev:client": "ts-node src/client.ts"
  },
  "dependencies": {
    "express": "^4.18.0",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/socket.io": "^3.0.2",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}